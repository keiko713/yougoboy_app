<%= link_to new_user_session_path do %>
  <i class="icon-signin icon-4x pull-right right-btn"></i>
<% end %>
<%= link_to root_path do %>
  <i class="icon-circle-arrow-left icon-4x pull-left left-btn"></i>
<% end %>
<h2>Sign up - 新規アカウント作成</h2>
<hr>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email, wrapper: :prepend, label: false do %>
    <span class="add-on"><i class="icon-envelope"></i></span>
    <%= f.input_field :email, placeholder: "メールアドレス", autofocus: true %>
  <% end %>
  <%= f.input :familyname, wrapper: :prepend, label: false do %>
    <span class="add-on"><i class="icon-group"></i></span>
    <%= f.input_field :familyname, placeholder: "家族の名字をローマ字で" %>
  <% end %>
  <%= f.input :password, wrapper: :prepend, label: false do %>
    <span class="add-on"><i class="icon-key"></i></span>
    <%= f.input_field :password, placeholder: "パスワード" %>
  <% end %>
  <%= f.input :password_confirmation, wrapper: :prepend, label: false do %>
    <span class="add-on"><i class="icon-key"></i></span>
    <%= f.input_field :password_confirmation, placeholder: "パスワード確認用" %>
  <% end %>

  <div class="form-actions">
    <%= button_tag type: 'submit', class: 'btn btn-large btn-success' do %>
      <i class="icon-plus-sign"></i>&nbsp;アカウント作成
    <% end %>
  </div>
<% end %>
